<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#2D3047"
    app:strokeColor="#3A3D5C"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <ImageView
            android:id="@+id/characterThumbnail"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:background="#1A1A2E"
            android:layout_marginBottom="14dp" />

        <TextView
            android:id="@+id/characterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/characterPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFDF6B"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/characterPublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7ECFFF"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/characterOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B8B8B8"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/characterComics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E94560"
                android:textStyle="bold"
                android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
